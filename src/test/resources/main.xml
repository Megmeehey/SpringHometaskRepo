<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="auditoriumMapRepo" class="epam.spring.repo.map.AuditoriumMapRepo"/>
	<bean id="eventMapRepo" class="epam.spring.repo.map.EventMapRepo"/>
	<bean id="ticketMapRepo" class="epam.spring.repo.map.TicketMapRepo"/>
	<bean id="userMapRepo" class="epam.spring.repo.map.UserMapRepo"/>

	<bean id="userService" class="epam.spring.service.UserService">
		<property name="userRepo" ref="userMapRepo"/>
	</bean>

	<bean id="eventService" class="epam.spring.service.EventService">
		<property name="eventRepo" ref="eventMapRepo"/>
	</bean>

	<bean id="auditoriumService" class="epam.spring.service.AuditoriumService">
		<property name="auditoriumRepo" ref="auditoriumMapRepo"/>
	</bean>

	<import resource="discounts.xml"/>
</beans>